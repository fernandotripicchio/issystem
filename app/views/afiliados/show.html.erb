<hr />
<div class="row">
  <h3 class="header">Afiliado: <%= @afiliado.apellido_nombre %></h3>	
</div>

<div class="panel">
	
	
	<div class="row">
		<div class="column large-3">
			<%= label_column("Apellido y Nombre:") %>
		</div>
		<div class="column large-9">
			<%= @afiliado.apellido_nombre %>
		</div>
	</div>
	
	<div class="row">
		<div class="column large-3">
			<%= label_column("Beneficio:") %>
		</div>		
		<div class="column large-4">
			<%= @afiliado.numero_afiliado %>
		</div>
		<div class="column large-2">
			<%= label_column("Documento:") %>
		</div>
		<div class="column large-3">
			<%= @afiliado.documento %>
		</div>		
	</div>
	
	<div class="row">
		<div class="column large-3">
			<%= label_column("Domicilio:") %>
		</div>		
		<div class="column large-9">
			<%= @afiliado.domicilio_calle %>
		</div>
	</div>

	<div class="row">
		<div class="column large-3">
			<%= label_column("Nro:") %>
		</div>		
		<div class="column large-1">
			<%= @afiliado.domicilio_nro %>
		</div>
		<div class="column large-2">
			<%= label_column("Piso:") %>
		</div>		
		<div class="column large-1">
			<%= @afiliado.domicilio_piso %>
		</div>
		<div class="column large-2">
			<%= label_column("Depto:") %>
		</div>		
		<div class="column large-1">
			<%= @afiliado.domicilio_depto %>
		</div>
	</div>	
	<div class="row">
		<div class="column large-3">
			<%= label_column("Departamento:") %>
		</div>		
		<div class="column large-4">
			<%= @afiliado.codigo_departamento %>
		</div>
		<div class="column large-3">
			<%= label_column("Localidad:") %>
		</div>		
		<div class="column large-2">
			<%= @afiliado.codigo_localidad %>
		</div>
	</div>	
	

	<div class="row">
		<div class="column large-3">
			<%= label_column("Fecha Alta:") %>
		</div>		
		<div class="column large-4">
			<%= @afiliado.fecha_alta %>
		</div>
		<div class="column large-3">
			<%= label_column("Discapacidad:") %>
		</div>		
		<div class="column large-2">
			<%= @afiliado.incapacidad %>
		</div>
	</div>	
	

	</div>
	<hr />
	<div class="row">
		<%= link_to 'Editar', edit_afiliado_path(@afiliado), :class => "button small" %> |
		<%= link_to 'Volver', afiliados_path, :class => "button small" %>
	</div>	

