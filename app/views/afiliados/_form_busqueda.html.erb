<%= simple_form_for :search,  url: search_afiliados_path , :method => :get do |f| %>
    <%= f.input :keyword, 
                :as => :search,
                :placeholder => "Buscar",
                :required => false, 
                :div => false,
                :wrapper => false,
                :input_html => {:value => @keyword},
                :label => false,
                :autofocus => true %>
 	<%= f.submit "Buscar", :class => "tiny button" %>
 	<%= f.input :checkbox, :as=> :boolean, :wrapper => 'inline_checkbox' %>
<% end %>