<table class="large-12" role="grid">
  <tr>
    <th>ID</th>
    <th>Nombre</th>
    <th>Cuit</th>
    <th class="large-3">&nbsp;</th>
  </tr>

<% @proveedores.each do |proveedor| %>
  <tr>
  	<td><%= proveedor.razon_social %></td>
  	<td><%= proveedor.cuit %></td>
  	<td><%= proveedor.direccion %></td>
    <td>
    <%= link_to 'Ver', proveedor, :class => "tiny button" %>
    <%= link_to 'Editar', edit_proveedor_path(proveedor), :class => "tiny button" %>
    <%= link_to 'Eliminar', proveedor, method: :delete, data: { confirm: 'Esta Seguro?' } , :class => "tiny button" %>
    </td>
  </tr>
<% end %>
</table>